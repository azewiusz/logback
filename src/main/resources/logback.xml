<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} TR [%thread] %-5level [%class{36}] %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>
    
    <appender name="JUNITREPORT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} HR [%thread] %-5level [%class{36}] %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>
   
    <logger name="com.base22" level="TRACE"/>
   
 
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>